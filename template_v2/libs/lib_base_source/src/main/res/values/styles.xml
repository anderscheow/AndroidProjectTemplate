<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Toolbar-->
    <style name="Widget.MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary
        </item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyTheme.BottomSheet</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!--Alert Dialog-->
    <style name="ThemeOverlay.MyTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert" />

    <style name="ThemeOverlay.MyTheme.AlertDialog.Transparent" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
    </style>

    <!--Text Input Layout-->
    <style name="Widget.MyTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="endIconMode">none</item>
    </style>

    <style name="Widget.MyTheme.TextInputLayout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
    </style>

    <!--Button-->
    <style name="Widget.MyTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="backgroundTint">@color/action_text_primary_color</item>
    </style>

    <style name="Widget.MyTheme.Button.Circular" parent="Widget.MyTheme.Button">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.MyTheme.Button.Yellow" parent="Widget.MyTheme.Button">
        <item name="backgroundTint">@color/action_button_yellow_color</item>
    </style>

    <!--TabLayout-->
    <style name="Widget.MyTheme.TabLayout.Title" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.MyTheme.TabLayout.Title</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/grey_999</item>
    </style>

    <style name="TextAppearance.MyTheme.TabLayout.Title" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <!--ProgressDialog-->
    <style name="Widget.MyTheme.ProgressBar.EmptyView" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/img_frame_loading_grey</item>
        <item name="android:indeterminateDuration">500</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!--Divider-->
    <style name="Widget.MyTheme.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ededed</item>
    </style>
</resources>
